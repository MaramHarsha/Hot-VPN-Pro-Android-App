<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/titlebar_bg"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgMenu"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="10dp"
                                android:src="@drawable/drawer_opener_icon" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/app_name"
                                android:textColor="#fff"
                                android:textSize="18sp"
                                android:textStyle="bold" />


                            <ImageView
                                android:id="@+id/country_flag"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="10dp"
                                android:src="@drawable/ic_earth" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/main_root_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:orientation="vertical"
                                android:overScrollMode="ifContentScrolls">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:background="@drawable/server_bg"
                                    android:orientation="horizontal">


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="15dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="50dp"
                                            android:layout_margin="8dp"
                                            android:src="@drawable/ic_upload" />

                                        <TextView
                                            android:id="@+id/uploading_speed"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:textColor="#3D3D3D"
                                            android:textSize="18dp" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginRight="10dp"
                                            android:layout_marginBottom="5dp"
                                            android:orientation="vertical"
                                            android:visibility="gone">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_horizontal"
                                                android:text="Upload"
                                                android:textColor="#3D3D3D" />

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_horizontal"
                                                android:orientation="horizontal">


                                            </LinearLayout>

                                            <com.airbnb.lottie.LottieAnimationView
                                                android:id="@+id/uploading_graph"
                                                android:layout_width="match_parent"
                                                android:layout_height="60dp"
                                                app:lottie_autoPlay="false"
                                                app:lottie_loop="true"
                                                app:lottie_rawRes="@raw/uplod_speed"
                                                app:lottie_speed="1" />

                                        </LinearLayout>


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="15dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="5dp"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="50dp"
                                            android:layout_margin="8dp"
                                            android:src="@drawable/ic_download" />

                                        <TextView
                                            android:id="@+id/downloading_speed"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:textColor="#3D3D3D"
                                            android:textSize="18dp" />


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginRight="10dp"
                                            android:layout_marginBottom="5dp"
                                            android:orientation="vertical"
                                            android:visibility="gone">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_horizontal"
                                                android:text="Download"
                                                android:textColor="#3D3D3D" />

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_horizontal"
                                                android:orientation="horizontal">


                                            </LinearLayout>

                                            <com.airbnb.lottie.LottieAnimationView
                                                android:id="@+id/downloading_graph"
                                                android:layout_width="match_parent"
                                                android:layout_height="60dp"
                                                app:lottie_autoPlay="false"
                                                app:lottie_loop="true"
                                                app:lottie_rawRes="@raw/download_speed"
                                                app:lottie_speed="1" />
                                        </LinearLayout>

                                    </LinearLayout>


                                </LinearLayout>
                                <!--<RelativeLayout
                                    android:id="@+id/lin_spped"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:paddingLeft="30dp"
                                    android:paddingRight="30dp">

                                    <LinearLayout
                                        android:id="@+id/download_speed"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_alignParentLeft="true"
                                        android:background="@drawable/ic_speed_background"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/download_img"
                                            android:layout_width="25dp"
                                            android:layout_height="20dp"
                                            android:src="@drawable/ic_download" />

                                        <TextView
                                            android:id="@+id/txt_download"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="8dp"
                                            android:text="@string/_0_b"
                                            android:textColor="@android:color/white"
                                            android:textSize="16sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/upload_speed"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_alignParentRight="true"
                                        android:background="@drawable/ic_speed_background"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/upload_img"
                                            android:layout_width="25dp"
                                            android:layout_height="20dp"
                                            android:src="@drawable/ic_upload" />

                                        <TextView
                                            android:id="@+id/txt_upload"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="8dp"
                                            android:text="@string/_0_b"
                                            android:textColor="@android:color/white"
                                            android:textSize="16sp" />
                                    </LinearLayout>
                                </RelativeLayout>-->


                                <LinearLayout
                                    android:id="@+id/optimal_server_btn"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="75dp"
                                    android:layout_marginRight="75dp"
                                    android:background="@drawable/ic_ip_background"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:visibility="gone">

                                    <ImageView
                                        android:id="@+id/country_flag"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_marginRight="30dp"
                                        android:src="@drawable/ic_earth" />

                                    <TextView
                                        android:id="@+id/selected_server"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="@string/select_country"
                                        android:textColor="@android:color/white"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <RelativeLayout
                                    android:id="@+id/menus"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_below="@+id/optimal_server_btn"
                                    android:background="#ffffff"
                                    android:gravity="center">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal"
                                        android:visibility="gone">

                                        <ImageView
                                            android:id="@+id/imgrate"
                                            android:layout_width="100dp"
                                            android:layout_height="100dp"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginRight="20dp"
                                            android:layout_marginBottom="10dp"
                                            android:focusable="true"
                                            android:src="@drawable/rate" />

                                        <ImageView
                                            android:id="@+id/imgmenu"
                                            android:layout_width="100dp"
                                            android:layout_height="100dp"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginRight="20dp"
                                            android:layout_marginBottom="10dp"
                                            android:focusable="true"
                                            android:src="@drawable/menu" />
                                    </LinearLayout>
                                </RelativeLayout>
                            </LinearLayout>


                            <RelativeLayout
                                android:id="@+id/firstlayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <!--<RelativeLayout
                                    android:id="@+id/firstlayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg"
                                    android:gravity="center">-->

                                <RelativeLayout
                                    android:id="@+id/connection_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="15dp"
                                    android:elevation="15dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/img_connect"
                                        android:layout_width="150dp"
                                        android:layout_height="150dp"
                                        android:src="@drawable/ic_off" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/connection_layout">


                                    <LinearLayout
                                        android:id="@+id/connection_time_block"
                                        android:layout_width="250dp"
                                        android:layout_height="40dp"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true"
                                        android:orientation="vertical"
                                        android:visibility="visible">

                                        <ImageView
                                            android:id="@+id/connection_state"
                                            android:layout_width="230dp"
                                            android:layout_height="40dp"
                                            android:layout_centerHorizontal="true"
                                            android:layout_gravity="center" />

                                    </LinearLayout>

                                </RelativeLayout>
                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/iplayout"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_below="@id/firstlayout"
                                android:layout_marginLeft="75dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginRight="75dp"
                                android:background="@drawable/ic_ip_background"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="30dp"
                                    android:layout_marginRight="20dp"
                                    android:src="@drawable/ic_location" />

                                <TextView
                                    android:id="@+id/server_ip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@android:color/white"
                                    android:textSize="20sp" />
                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </ScrollView>

            <RelativeLayout
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="3dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/ic_footer_bg"
                android:gravity="right"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/premium"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_getnow" />

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/layDrawerBg"
            android:background="#A9000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layDrawer"
            android:layout_width="800px"
            android:layout_height="match_parent"

            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tvWhatsApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"></TextView>


            </LinearLayout>


            <!--Get Premium
            Rate Us
            Invite Friends
            FAQ
            Privacy Policy-->

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_premium"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:id="@+id/layPremium"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Get Premium"
                    android:textColor="@color/black"
                    android:textSize="18sp"></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:src="@drawable/rate"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:id="@+id/layRateUs"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Rate Us"

                    android:textColor="@color/black"
                    android:textSize="18sp"></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:src="@drawable/share"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:id="@+id/layShare"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Invite Friends"
                    android:textColor="@color/black"
                    android:textSize="18sp"></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:src="@drawable/faq"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:id="@+id/layFAQ"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="FAQ"
                    android:textColor="@color/black"
                    android:textSize="18sp"></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:src="@drawable/privacy"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:id="@+id/layPrivacyPolicy"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Privacy Policy"
                    android:textColor="@color/black"
                    android:textSize="18sp"></TextView>


            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>